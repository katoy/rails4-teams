<div>　チーム名: <%= @team.name %> </div>
<div>チーム詳細: <%= @team.description %> </div>
<div>メンバー</div>
<div>
  <table class="table table-hover table-condensed table-striped table-bordered">
    <tr>
      <th class="col-sm-1 text-nowrap">No.</th>
      <th class="col-sm-2 text-nowrap">名前</th>
      <th class="col-sm-1 text-nowrap">年齢</th>
      <th class="col-sm-6 text-nowrap">メール</th>
    </tr>
    <%- @members.each_with_index do |member, idx| -%>
      <tr>
        <td class="text-right col-sm"><%= idx + 1 %></td>
        <td><%= member.name %></td>
        <td class="text-right col-sm"><%= member.age %></td>
        <td><%= member.mail %></td>
      </tr>
  <%- end -%>
  </table>
</div>
<div><%= link_to 'チームを編集する', edit_team_path(@team) %></div>
<div><%= link_to '一覧に戻る', root_path %></div>
